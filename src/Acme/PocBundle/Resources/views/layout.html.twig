<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title 'MyAwesomeWebsite' %}</title>
        <!-- CSS -->
        {% block stylesheets %}
            {% stylesheets filter='cssrewrite' output="css/main_*.css"
               'bundles/acmepoc/css/style.css'
            %}
                <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
            {% endstylesheets %}
        {% endblock stylesheets %}

        <!-- Javascript -->
        {% block javascripts %}
            <script type="text/javascript" src="http://yui.yahooapis.com/3.8.1/build/yui/yui-min.js"></script>
            {% javascripts output='js/compiled/main_*.js'
            'bundles/acmepoc/js/app.js'
            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock javascripts %}
    </head>
    <body>
        <div class="body-container">
            {% block header %}
                <header>
                    <h1><a href="{{ path('acme_poc_home') }}">My Awesome Website</a></h1>
                </header>
            {% endblock header %}

            {% block body_content %}
                <div id="content">
                    <aside id="sidebar">
                        {% block sidebar %}
                            <h2>Sidebar Menu</h2>
                            <nav>
                                {{ knp_menu_render('main', {'separator': '|', 'currentAsLink': false}) }}
                            </nav>
                        {% endblock sidebar %}
                    </aside>
                    <section id="main">
                        {% block main %}{% endblock main %}
                    </section>
                </div>
            {% endblock body_content %}

            {% block footer %}
                <footer>
                    &copy;{{ ('now')|date('Y') }} My Awesome Website
                </footer>
            {% endblock footer %}
        </div>
        <script>
            YUI.add('cit-loader', function (Y) {
                Y.CitLoader = {};
                
                Y.CitLoader.loadContentFragments = function (req, res, next) {
                    var url = req.url;
                    
                    // If there's an outstanding request, abort it.
                    if (this._request) {
                        this._request.abort();
                    }

                    // Send a request.
                    this._request = Y.io(url, {
                        'arguments': {
                            route: {
                                req : req,
                                res : res,
                                next: next
                            },

                            url: url
                        },
                        context: this,
                        headers: {'Accept': 'x-application/content-fragmented'},
                        timeout: this.get('timeout'),
                        on: {
                            complete: function (id, ioResponse, details) {
                                var route   = details.route,
                                    req     = route.req,
                                    res     = route.res;

                                // Put the URL requested through `Y.io` on the route's `req` object.
                                req.ioURL = details.url;

                                // Put the parsed content and `Y.io` response object on the route's
                                // `res` object.
                                res.ioResponse = ioResponse;

                                route.next();
                            },
                            end     : function () {
                                this._request = null;
                            }
                        }
                    });
                }
            }, '0.0.1', {
               requires: ['io', 'event']
            });
            
            
            YUI({
                debug: true,
                combine: false,
                filter: "raw"
            }).use('app', 'cit-loader', function (Y) {
                var app = new Y.App({
                    transitions: true,
                    serverRouting: true,
                    container: '#main',
                    viewContainer: '#main'
                });
                
                var firstTime = true;
                
                app.route('/*', Y.CitLoader.loadContentFragments, function(req, res, next) {
                    if(firstTime) {
                        firstTime = false;
                        return;
                    }
                    var data = Y.JSON.parse(res.ioResponse.responseText);
                    Y.Node.one('#main').setHTML(data['main']).setStyle('background', 'yellow');
                    Y.Node.one('#sidebar').setHTML(data['sidebar']).setStyle('background', 'yellow');
                    Y.config.doc.title = data['title'];
                });
                
                app.render().dispatch();
            });
        </script>
    </body>
</html>