<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title 'MyAwesomeWebsite' %}</title>
        <!-- CSS -->
        {% block stylesheets %}
            {% stylesheets filter='cssrewrite' output="css/main_*.css"
               'bundles/acmepoc/css/style.css'
            %}
                <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
            {% endstylesheets %}
        {% endblock stylesheets %}

        <!-- Javascript -->
        {% block javascripts %}
            <script type="text/javascript" src="http://yui.yahooapis.com/3.8.1/build/yui/yui-min.js"></script>
            {% javascripts output='js/compiled/main_*.js'
            'bundles/acmepoc/js/app.js'
            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock javascripts %}
    </head>
    <body>
        <div class="body-container">
            {% block header %}
                <header>
                    <h1><a href="{{ path('acme_poc_home') }}">My Awesome Website</a></h1>
                </header>
            {% endblock header %}

            {% block body_content %}
                <div id="content">
                    <aside id="sidebar">
                        {% block sidebar %}
                            <h2>Sidebar Menu</h2>
                            <nav>
                                {{ knp_menu_render('main', {'separator': '|', 'currentAsLink': false}) }}
                            </nav>
                        {% endblock sidebar %}
                    </aside>
                    <section id="main">
                        {% block main %}{% endblock main %}
                    </section>
                </div>
            {% endblock body_content %}

            {% block footer %}
                <footer>
                    &copy;{{ ('now')|date('Y') }} My Awesome Website
                </footer>
            {% endblock footer %}
        </div>
        <script>
            YUI().use('app', 'node', function (Y) {
                var app = new Y.App({
                    transitions: true,
                    serverRouting: true,
                    container: '#main',
                    viewContainer: '#main'
                });

//                app.route('/', 'loadContent', function(req, res, next) {
////                    this.showContent(res.content.node, {view: req.path});
//                    console.log(res.content.node);
//                });

                app.route('/profile', 'loadContent', function(req, res, next) {
//                    this.showContent(res.content.node, {view: req.path});
                    console.log(res.content.node.title);
                });

                app.render().dispatch();
            });
        </script>
    </body>
</html>