<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title 'MyAwesomeWebsite' %}</title>
        <!-- CSS -->
        {% block stylesheets %}
            {% stylesheets filter='cssrewrite' output="css/main_*.css"
               'bundles/acmepoc/css/style.css'
            %}
                <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
            {% endstylesheets %}
        {% endblock stylesheets %}

        <!-- Javascript -->
        {% block javascripts %}
        {% endblock javascripts %}
    </head>
    <body>
        <div class="body-container" id="app">
            {% block header %}
                <header id="header">
                    <h1><a href="{{ path('acme_poc_home') }}">My Awesome Website</a></h1>
                    <button>Test</button>
                </header>
            {% endblock header %}

            {% block body_content %}
                <div id="content">
                    <aside id="sidebar">
                        {% block sidebar %}
                            <h2>Sidebar Menu</h2>
                            <nav>
                                {{ knp_menu_render('main', {'separator': '|', 'currentAsLink': false}) }}
                            </nav>
                        {% endblock sidebar %}
                        <button>Test</button>
                    </aside>
                    <section id="main">
                        {% block main %}{% endblock main %}
                    </section>
                </div>
            {% endblock body_content %}

            {% block footer %}
                <footer id="footer">
                    &copy;{{ ('now')|date('Y') }} My Awesome Website
                    <button>Test</button>
                </footer>
            {% endblock footer %}
        </div>

        <script>
            AcmePoc = {};
            AcmePoc.globalConfig = {
                root: '{{ asset('bundles/acmepoc/js') }}'
            };
        </script>
        <script type="text/javascript" src="http://yui.yahooapis.com/3.8.1/build/yui/yui-min.js"></script>
        <script type="text/javascript" src="{{ asset('bundles/acmepoc/js/config.js') }}"></script>
        <script>
            YUI.applyConfig(AcmePoc.YuiConfig);
        </script>
        <script>
            YUI().use('poc-app', 'poc-page-view', 'poc-io', function (Y) {
                var app, routes;
                
                Y.namespace('POC').HomeView = Y.Base.create('homeView', Y.View, [], {
                    initializer: function(config) {
                        Y.log('init from home');
                    },
                });  
                
                Y.namespace('POC').ProfileView = Y.Base.create('profileView', Y.View, [], {
                    initializer: function(config) {
                        Y.log('init from profile');
                    },
                });  
                
                routes = {
                    home: {
                        path: '/'
                    },
                    profile: {
                        path: '/profile'
                    },
                    photos: {
                        path: '/photos'
                    }
                };
                
                // create application
                app = new Y.POC.App({
                    transitions: true,
                    serverRouting: true,
                    container: '#main',
                    views: {
                        home: {
                            type: 'POC.HomeView'
                        },
                        profile: {
                            type: 'POC.ProfileView'
                        },
                        photos: {
                            type: 'POC.PhotoListView'
                        },
                    },
                });

                // Setup routes.
                Y.Object.each(routes, function (route, name) {
                    app.route(route.path, Y.PocIo.loadContentFragments, function(req, res, next) {
                        var currentRoute = null;
                        var currentRouteName = null;
                        var data = Y.JSON.parse(res.ioResponse.responseText);
                        
                        Y.Object.each(routes, function(route, name) {
                            if(route.path === req.path) {
                                currentRoute = route;
                                currentRouteName = name;
                                
                                return;
                            }
                        });
                        
                        app.showContent(Y.Node.create(data.fragments.main), {
                            view: currentRouteName
                        });
                        
                        if (data.hasOwnProperty('title')) {
                            Y.config.doc.title = data['title'];
                        }
                        
                        Y.one('#sidebar').setHTML(data.fragments.sidebar);
                    });
                });
                
                /*
                Something wrong here...
                app.showContent(Y.one('#content'), {
                    view: 'home'
                });
                */
 
                app.render();
            });
        </script>
        {% block templates %}{% endblock templates %}
    </body>
</html>